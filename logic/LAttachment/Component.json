{
    "name": "LAttachment",
    "description": {
        "de": "Diese Komponente bietet Befehle zum Anlegen, Abrufen, Löschen und Ändern von Aufgabenanhängen."
    },
    "version": "1.0",
    "classFile": "LAttachment.php",
    "className": "LAttachment",
    "files": [
        {
            "path": ".htaccess"
        },
        {
            "path": "LAttachment.php"
        },
        {
            "path": "index.php"
        },
        {
            "path": "Commands.json"
        }
    ],
    "links": [
        {
            "name": "controller",
            "target": "LController",
            "description": {
                "de": "über diesen Ausgang werden die Anhänge behandelt"
            },
            "links": [
                {
                    "method": "POST",
                    "path": "\/DB\/attachment"
                },
                {
                    "method": "GET",
                    "path": "\/DB\/attachment\/attachment\/:attachmentid"
                },
                {
                    "method": "DELETE",
                    "path": "\/DB\/attachment\/:attachmentid"
                },
                {
                    "method": "PUT",
                    "path": "\/DB\/attachment\/:attachmentid"
                }
            ]
        },
        {
            "name": "postFile",
            "target": "LFile",
            "description": {
                "de": "zum Speichern von Dateien beim Anlegen/Ändern eines Anhangs"
            },
            "links": [
                {
                    "method": "POST",
                    "path": "\/file"
                }
            ]
        },
        {
            "name": "postAttachment",
            "target": "DBAttachment",
            "description": {
                "de": "zum Speichern eines Anhangs"
            },
            "links": [
                {
                    "method": "POST",
                    "path": "\/attachment"
                }
            ]
        }
    ]
}